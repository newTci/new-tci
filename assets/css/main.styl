// 		display flex

@media (max-width: 1200px)
	.wrapper-box
		height 67px
	.hashtag
		font-size 16px
	.thumbnail-4-text
		font-size 18px
	#utama
		margin-bottom 330px
	.left-side-banner
		img
			top 110px
	.wrapper-relative span
		font-size 24px
	#loker-sub-menu .wrapper-thumbnail-3 img
		height 123px
	#jualbeli-sub-menu .wrapper-thumbnail-3 img
		height 123px
	#interaksi-sub-menu .wrapper-thumbnail-3 img
		height 123px