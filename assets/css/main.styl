
	
.no-gutter
	padding 0
.no-margin
	margin 0
body
	overflow-x hidden
	overflow-y scroll
	
// variable

$hashtag = 24px
$hitam = black
$hitam-dope = #2c3e50
$h-banner-tengah = 293px
$font-divider = 20px
$montserrat = 'Montserrat', sans-serif
$roboto = 'Roboto', sans-serif
$font-thumbnail = 26px
$font-slider = 38px
// /variable

#utama
	margin-bottom 275px
	position relative
	z-index 6

.background-container
	width 200%
	background-color white
	position absolute
	top 0
	left -50%
	z-index -3
	min-height 100%
	overflow hidden

h1
	font-family "Ubuntu"
	
.left-side-banner
	text-align right
	height 700px
	z-index 1
	img
		position fixed 
		width 130px
		top 150px
		margin-left -130px

.right-side-banner
	text-align left
	min-height 700px
	img
		position fixed 
		top 150px
		width 130px
	
// center
.logo
	max-height 150px
	position relative
	img
		width 68%
		z-index 2
	.utility
		float right
		position absolute
		text-align right
		bottom 5px
		a
			font-size 30px
			margin-left 10px
			color black

.hashtag
	display inline-block
	margin 0
	position: absolute;
	top 50%
	left 50%;
	margin-right -50%;
	transform translate(-50%, -50%)
	font-family "Ubuntu"
	font-size $hashtag
	color white
	font-weight bold
	
.hover-1
	transform scale(1.1)
	left 64px
	-webkit-transition: all .25s ease
	-moz-transition: all .25s ease
	-ms-transition: all .25s ease
	-o-transition: all .25s ease
	transition: all .25s ease
	
.hover-text-thumbnail
	transform scale(1.1)
	

.wrapper-box
	background-color $hitam
	width 100%
	height 111px
	margin-bottom 20px
	position relative
	&:last-child
		margin-bottom 0
	
#first-section.wrapper-center
	margin-bottom 10px

.wrapper-center
	.first-img
		width 100%
	.first-wrapper
		#first-sub-left
			display flex
			flex-direction column
			flex-wrap wrap
	.col-sm-8
		position relative
		span
			position absolute
			bottom 0
			left 22px
			font-size 40px
			text-decoration none
			color white
			-webkit-transition: all .25s ease
			-moz-transition: all .25s ease
			-ms-transition: all .25s ease
			-o-transition: all .25s ease
			transition: all .25s ease
			font-family "Roboto"
			font-weight bold
	.banner-center
		margin-top 10px
		img
			width 100%
			height auto

.big-divider
	background-color black
	width 100%
	position relative
	height 35px
	margin-bottom 10px

.text-divider
	font-size $font-divider
	color white
	font-weight 100
	position: absolute;
	top 50%
	left 50%;
	margin-right -50%;
	transform translate(-50%, -50%)
	font-family $roboto
	text-transform uppercase
	font-weight 100
	letter-spacing 1px
	

.wrapper-thumbnail-4
	position relative
	width 100%
	padding 0 5px
	height 113px
	&:first-child
		padding 0
.img-thumbnail-4
	width 100%
	height 150px

#menu-berita .col-md-3
	padding 0 5px
	margin-bottom 48px
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
		
.thumbnail-4-text
	font-size $font-thumbnail
	color white
	text-transform uppercase
	position absolute
	z-index 10
	bottom -35px
	font-family "Roboto"
	left 10px
	-webkit-transition: all .25s ease
	-moz-transition: all .25s ease
	-ms-transition: all .25s ease
	-o-transition: all .25s ease
	transition: all .25s ease
	font-weight bold
	
.wrapper-relative
	position relative
	span
		position absolute
		left 20px
		bottom 0
		font-family $roboto
		font-size $font-slider
		color white
		font-weight bold
.carousel
	img
		width 100%
		

#loker-sub-menu
	height auto
	margin 15px 0
	.col-md-4
		padding 0 5px
		&:first-child
			padding-left 0
		&:last-child
			padding-right 0
	.wrapper-thumbnail-3
		width 100%
		img
			width 100%
			height 191px
			
#jualbeli-sub-menu
	height auto
	margin 15px 0
	.col-md-4
		padding 0 5px
		&:first-child
			padding-left 0
		&:last-child
			padding-right 0
	.wrapper-thumbnail-3
		width 100%
		img
			width 100%
			height 191px
			
#interaksi-sub-menu
	height auto
	margin 10px 0 0
	.col-md-4
		padding 0 5px
		&:first-child
			padding-left 0
		&:last-child
			padding-right 0
	.wrapper-thumbnail-3
		width 100%
		img
			width 100%
			height 191px
			
.interaksi-side-text
	font-size $font-divider
	font-family $roboto
	
// footer
#footer-container
	height auto
	background-color black
	width 100%
	overflow hidden
	position fixed
	bottom 0
	z-index 1

#footer
	padding 20px
	position relative
	z-index 10
	max-width 1400px
	margin 0 auto
	.col-lg-3
		padding 0
.logo-footer
	height 55px
.logo-gplay
	width 100%
	margin-top 15px
	
.footer-flex
	display flex
	flex-wrap wrap
	flex-direction column
	a
		text-decoration none
		color white
		font-family $roboto
		font-size $font-divider+2
		margin-bottom 25px
		-webkit-transition: all .25s ease
		-moz-transition: all .25s ease
		-ms-transition: all .25s ease
		-o-transition: all .25s ease
		&:hover
			transform scale(1.05)
			-webkit-transition: all .25s ease
			-moz-transition: all .25s ease
			-ms-transition: all .25s ease
			-o-transition: all .25s ease
		i
			display inline-block
			width 20px
			
// @keyframes {asd}
